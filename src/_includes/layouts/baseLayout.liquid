            }
            .width-lg-12{
                width:100%;
            }
        }

        @media (min-width: 1200px) {
            .width-xl-1{
                width:8.33%
            }
            .width-xl-2{
                width:16.66%
            }
            .width-xl-3{
                width:25%;
            }
            .width-xl-4{
                width:33.33%;
            }
            .width-xl-6{
                width:49.9%;
            }
            .width-xl-8{
                width:66.66%;
            }
            .width-xl-9{
                width:74%;
            }
