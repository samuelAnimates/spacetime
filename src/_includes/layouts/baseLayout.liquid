            .width-sm-10{
                width:83.33%;
            }
            .width-sm-12{
                width:100%;
            }
        }

        @media (min-width: 768px) {
            .width-md-2{
                width:16.66%
            }
            .width-md-3{
                width:25%;
            }
            .width-md-4{
                width:33.33%;
            }
            .width-md-6{
                width:49.9%;
            }
            .width-md-8{
                width:66.66%;
            }
            .width-md-9{
                width:74%;
            }
            .width-md-10{
                width:83.33%;
            }
            .width-md-12{
                width:100%;
            }
        }

        @media (min-width: 992px) {
            .width-lg-1{
                width:8.33%
            }
            .width-lg-2{
                width:16.66%
            }
            .width-lg-3{
                width:25%;
            }
            .width-lg-4{
                width:33.33%;
            }
            .width-lg-6{
                width:49.9%;
            }
            .width-lg-8{
                width:66.66%;
            }
            .width-lg-9{
                width:74%;
            }
            .width-lg-10{
